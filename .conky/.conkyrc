background no
use_xft yes
xftfont Droid Sans Mono:size=10
xftalpha 0.8
update_interval 1.0
total_run_times 0
own_window yes
own_window_type desktop
own_window_transparent yes
own_window_colour black
own_window_hints undecorated,skip_pager,skip_taskbar
double_buffer yes
minimum_size 260 5
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
stippled_borders 0
#border_margin 4
border_width 0
default_color white
default_shade_color black
default_outline_color black
alignment top_left
gap_x 1565
gap_y 45
no_buffers yes
uppercase no
cpu_avg_samples 1
net_avg_samples 1
override_utf8_locale no
use_spacer right
mpd_host localhost
#mpd_portPort 6060
alignment top_left
#min_width 280
#max_width 280

TEXT
${font Droid Sans Mono:style=Bold:size=16}${color lightgrey}${alignc}${time %a %d. %b %k:%M}
$font$color${alignc} ${tztime ETC/UTC  %H:%M} UTC
${color lightgrey}$stippled_hr
${color lightgrey}Processes:$color $processes  ${color grey}Running:$color $running_processes ${color lightgrey}Up:$color $uptime_short

${color lightgrey}CPU: $cpu% ${cpubar}
${color}Name                  PID     CPU%    MEM%
${font Droid Sans Mono:size=8}${color lightgrey}${top name 1}        ${top_mem pid 1}    ${top_mem cpu 1}   ${top_mem mem 1}
${color lightgrey}${top name 2}        ${top_mem pid 2}    ${top_mem cpu 2}   ${top_mem mem 2}
${color lightgrey}${top name 3}        ${top_mem pid 3}    ${top_mem cpu 3}   ${top_mem mem 3}
${cpugraph 48,345 009bf9 ffffff}
$font${color lightgrey}$stippled_hr
$font${color lightgrey}RAM: $mem/$memmax - $memperc% ${membar}
${color lightgrey}Swap: $swap/$swapmax - $swapperc% ${swapbar}
${color}Name                  PID     CPU%    MEM%
${font Droid Sans Mono:size=8}${color lightgrey}${top_mem name 1}        ${top_mem pid 1}    ${top_mem cpu 1}   ${top_mem mem 1}
${color lightgrey}${top_mem name 2}        ${top_mem pid 2}    ${top_mem cpu 2}   ${top_mem mem 2}
${color lightgrey}${top_mem name 3}        ${top_mem pid 3}    ${top_mem cpu 3}   ${top_mem mem 3}
${memgraph 48,345 009bf9 ffffff}
$font${color lightgrey}Connections${alignr}${color lightgrey}In:$color ${tcp_portmon 1 32767 count}  ${color lightgrey}Out:$color ${tcp_portmon 32768 61000 count}   ${color lightgrey}ALL:$color ${tcp_portmon 1 65535 count}
${color lightgrey}$stippled_hr
${color lightgrey}E - Down:$color ${downspeed eth0} ${color lightgrey} ${offset 20}Up:$color ${upspeed eth0}
${color lightgrey}W - Down:$color ${downspeed wlan0} ${color lightgrey} ${offset 20}Up:$color ${upspeed wlan0}

${color lightgrey}eth0:    $color ${addr eth0}
${color lightgrey}wlan0:   $color ${addr wlan0}
${color lightgrey}external:$color ${execi 3600 ~/.conky/pub_ip.sh}
${color lightgrey}$stippled_hr
${color lightgrey}Weather forecast:
$color${execi 600 ~/.dotfiles/.conky/weather.rb}
$font${color lightgrey}$stippled_hr
${color lightgrey}hda:  ${fs_used /}/${fs_size /}  ${fs_bar /}
${color lightgrey}$stippled_hr
${color lightgrey}Tretti Resque:$color
$color${execi 5 ~/.dotfiles/.conky/resque.rb}

