Config { font = "xft:Liberation Mono-10"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , allDesktops = True
       , commands = [ Run Weather "ESMS" [ "-t","<station>: <tempC>C"
                                         , "-L","18","-H","35"
                                         , "--normal","green","--high","red","--low","lightblue"] 36000
                    , Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Network "wlan0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Cpu [ "-L","3","-H","50"
                              , "--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Date "%d.%m.%Y %H:%M" "date" 10
                    , Run Battery [ "-t","<left>% / <timeleft>"
                                  , "-L","15","-H","50"
                                  , "-h","green","-n","yellow","-l","red" ] 600
                    , Run Uptime [] 10
                    , Run Swap [] 10
                    , Run StdinReader
                    ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = " %cpu% | %memory% * %swap% | %eth0% - %wlan0% | %StdinReader% }{ %ESMS% | %uptime% | %battery% | <fc=#ee9a00>%date%</fc>"
        }